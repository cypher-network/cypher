[Unit]
Description=tangram-cypnode
After=network.online.target
Wants=network-online.target

StartLimitIntervalSec=500
StartLimitBurst=5

[Service]
Type=notify
Restart=on-failure
RestartSec=5s

User=tangram-cypnode
Group=tangram-cypnode

WorkingDirectory=/opt/tangram/cypnode
ExecStart=/opt/tangram/cypnode/cypnode

[Install]
WantedBy=multi-user.target
